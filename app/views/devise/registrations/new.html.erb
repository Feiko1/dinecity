<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 padding-form matt-signup-wrapper">
      <h3>Sign-up in Seconds!</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <div class="space-around">
          <!--          <span class="fa fa-user errspan-user"></span> -->
          <div style="flex-grow: 1;"> <%= f.input :first_name, required: true, autofocus: true %> </div>
          <div style="flex-grow: 1;"> <%= f.input :last_name, required: true, autofocus: true %> </div>
        </div>
        <span class="fa fa-at errspan"></span>
        <%= f.input :email, required: true, autofocus: true %>
        <span class="fa fa-lock errspan"></span>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.hidden_field :kind, value: "normal_user" %>
        <!-- ^this sets a newly signed in user to category 'normal user', as opposed to 'owner' -->
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
