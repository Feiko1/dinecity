
<%= simple_form_for([ restaurant, review ], remote: true) do |form| %>
  <%= form.input :content %>
  <%= form.input :rating, input_html: {
      class: 'rating kv-ltr-theme-default-star rating-loading',
      value: "3",
      dir: "ltr",
      :'data-size' => "xs",
      :'data-min' => "0",
      :'data-max' => "5",
      :'data-step' => "0.5"
    } %>
  <%= form.button :submit, class:'button-base' %>
<% end %>

<%= content_for :after_js do %>
  <%= javascript_tag do  %>
    $(document).on('ready', function(){

        $('.kv-ltr-theme-default-star').rating({
            hoverOnClear: false,
            containerClass: 'is-star',
        });
    });
  <% end %>
<% end %>
